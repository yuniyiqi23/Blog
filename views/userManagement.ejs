<%- include('header') %>

<table class="ui compact celled definition table">
    <thead class="full-width">
        <tr>
            <th>姓名</th>
            <th>性别</th>
            <th>邮箱</th>
            <th>最近登录时间</th>
            <th>操作</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <% if(users.length > 0){%>
    <tbody>
        <%for(let user of users){%>
        <tr>
            <!-- <td class="collapsing">
                <div class="ui fitted slider checkbox">
                    <input type="checkbox"> <label></label>
                </div>
            </td> -->
            <td><%= user.name %></td>
            <td><%= ({m: '男', f: '女', x: '保密'})[user.gender] %></td>
            <td><%= user.email %></td>
            <td><%= user.loginTime %></td>
            <td><a class="item" href="/users/information?userId=<%= user._id %>">详细信息</a></td>
            <td><a class="item" href="/users/delete?userId=<%= user._id %>">删除</a></td>
            <td><a class="item" href="/users/sendEmailToResetPassword?userId=<%= user._id %>">重置密码</a></td>
        </tr>
        <%}%>
    </tbody>
    <%}%>
    </tbody>
    <tfoot class="full-width">
        <tr>
            <th colspan="7">
                <div class="ui right floated small primary labeled icon button">
                    <i class="user icon"></i> 
                    <a class="item" href="/users/deleteUserList" style="color: rgb(245, 240, 240)">删除用户列表</a>
                </div>
                <!-- <div class="ui small  button">
                    Approve
                </div>
                <div class="ui small  disabled button">
                    Approve All
                </div> -->
            </th>
        </tr>
    </tfoot>
</table>

<%- include('footer') %>