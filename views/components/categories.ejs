<div class="column" style="overflow-y:auto; overflow-x:auto; height:1000px;">
    <div class="ui raised segment">
        <a class="ui green ribbon label">分类</a>
        <p></p>
        <div class="ui input">
            <input id="categoryName" type="text">
        </div>
        <p></p>
        <input id="addCategory" type="button" class="mini ui button" value="添加">
        <p></p>
        <div class="grouped fields">
            <% if(categories){
            categories.forEach(function (obj) { %>
                <div class="field">
                    <div class="ui radio checkbox">
                        <input type="radio" name="checkbox_Category" value="<%= obj.category %>">
                        <label>
                            <%= obj.category %>
                        </label>
                    </div>
                </div>
                <p></p>
                <%})%>
                <button id="delCategory" class="mini ui red button">删除</button>
            <%}%>
        </div>
    </div>
</div>

<script type="text/javascript" src="/javascripts/category.js"></script>