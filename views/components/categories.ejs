<form class="ui form segment" <div class="field">
    <div class="grouped fields">
        <label>分类</label>
        <div class="field required">
            <input id="categoryName" type="text">
        </div>
        <input id="addCategory" type="button" class="ui button" value="添加">

        <% if(categories){
            categories.forEach(function (category) { %>
            <div class="field">
                <div class="ui radio checkbox">
                    <input type="radio" name="example2">
                    <label>
                        <%= category %>
                    </label>
                </div>
            </div>
            <%})%>
            <button id="delCategory" class="ui red button">删除</button>
        <%}%>
    </div>
</form>

<script type="text/javascript" src="/javascripts/category.js"></script>