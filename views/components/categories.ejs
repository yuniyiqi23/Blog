<div class="ui grid">
    <div class="column">
        <div class="ui raised segment">
            <a class="ui large green ribbon label">分类</a>
            <p></p>
            <div class="ui mini action input">
                <input id="categoryName" type="text">
                <div id="addCategory" class="ui teal button">添加</div>
            </div>
            <p></p>
            <div class="grouped fields">
                <% if(categories.length > 0){
                    categories.forEach(function (obj) { %>
                    <div class="field">
                        <div class="ui radio checkbox">
                            <input type="radio" name="checkbox_Category" value="<%= obj.category %>">
                            <label>
                                <%= obj.category %>
                            </label>
                        </div>
                    </div>
                    <p></p>
                    <%})%>
                        <form class="ui reply form" method="post" action="/categories/delCategory">
                            <input id="categoryValue" name="category" hidden>
                            <input type="submit" class="ui button" value="删除" />
                        </form>
                        <%}%>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/category.js"></script>